  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'new_lang'",
      "program": "${workspaceFolder}/target/debug/new_lang",
      "args": [
        "run",
        "./test.ah",
        "--release"
      ],
      "preLaunchTask": "rust: cargo build",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'new_lang'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=new_lang",
          "--package=new_lang"
        ],
        "filter": {
          "name": "new_lang",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}